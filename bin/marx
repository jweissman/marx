#!/usr/bin/env ruby

root = File.expand_path(File.join(File.dirname(__FILE__),'..'))
if File.directory?(File.join(root,'.git'))
  Dir.chdir(root) do
    begin
      require 'bundler/setup'
      require 'marx'

      # city = Marx::City.new; city.sim!
    rescue LoadError => e
      warn e.message
      warn "Run `gem install bundler` to install Bundler"
      exit(-1)
    end
  end
end
